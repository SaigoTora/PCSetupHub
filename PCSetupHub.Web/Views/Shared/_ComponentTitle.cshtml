@using PCSetupHub.Web.ViewModels

@model ComponentTitleViewModel

<h3 class="component-title text-muted">
	@Model.ComponentTypeName
	@if (Model.ComponentNumber != null)
	{
		<sup>@Model.ComponentNumber</sup>
	}
</h3>
<div class="section-header d-flex justify-content-between align-items-center mb-3">
	<div>
		@if (Model.Component != null)
		{
			<div class="component-name">
				@Model.Component.Name
			</div>
		}
	</div>
	<div>
		@if (Model.IsCurrentUserOwner)
		{
			if (Model.ShowAddButton)
			{
				<form asp-controller="@Model.ControllerName" asp-action="Add" class="d-inline">
					<button class="add-button" type="submit">Add</button>
				</form>
			}

			if (Model.Component == null && !Model.ShowAddButton)
			{
				<form asp-controller="@Model.ControllerName" asp-action="Select" class="d-inline">
					<button class="select-button" type="submit">Select</button>
				</form>
			}
			else if (Model.Component != null)
			{
				if (Model.Component.IsDefault)
				{
					<form asp-controller="@Model.ControllerName" asp-action="Select" class="d-inline">
						<button class="select-button" type="submit">Select</button>
					</form>
					<form asp-controller="@Model.ControllerName" asp-action="Clear" class="d-inline">
						<button class="clear-button" type="submit">Clear</button>
					</form>
				}
				else
				{
					<form asp-controller="@Model.ControllerName" asp-action="Edit" class="d-inline">
						<button class="edit-button" type="submit">Edit</button>
					</form>
					<form asp-controller="@Model.ControllerName" asp-action="Delete" class="d-inline">
						<button class="delete-button" type="submit">Delete</button>
					</form>
				}
			}
		}
	</div>
</div>