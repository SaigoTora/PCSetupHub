@using PCSetupHub.Core.DTOs
@using PCSetupHub.Data.Models.Users

@model UpdatePasswordRequest

@{
    ViewData["Title"] = "Change Password";
    Layout = "_AuthLayout";
}

<form asp-controller="Auth" asp-action="UpdatePassword" method="post">
    <h2 class="mb-5">Change Password</h2>

    <div class="input-field">
        <input asp-for="OldPassword" type="password" value="@TempData[nameof(UpdatePasswordRequest.OldPassword)]" required autocomplete="off" />
        <label asp-for="OldPassword">Old Password:</label>
    </div>

    <div class="input-field">
        <input id="Password" asp-for="NewPassword" type="password" value="@TempData[nameof(UpdatePasswordRequest.NewPassword)]" required autocomplete="off" />
        <label asp-for="NewPassword">New Password:</label>
        <button type="button" id="toggle-password" title="Show password" tabindex="-1">
            <i class="fas fa-eye"></i>
        </button>
    </div>

    <div class="input-field mb-5">
        <input asp-for="ConfirmPassword" type="password" value="@TempData[nameof(UpdatePasswordRequest.ConfirmPassword)]" required autocomplete="off" />
        <label asp-for="ConfirmPassword">Confirm Password:</label>
    </div>

    @if (!string.IsNullOrWhiteSpace(ViewData["FirstError"]?.ToString()))
    {
        <span class="text-danger mb-4" id="error-container">@ViewData["FirstError"]</span>
    }

    <button class="mb-4" type="submit">Change</button>
</form>

<script src="~/js/auth.js"></script>