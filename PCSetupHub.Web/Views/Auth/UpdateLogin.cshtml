@using PCSetupHub.Core.DTOs
@using PCSetupHub.Data.Models.Users

@model UpdateLoginRequest

@{
    ViewData["Title"] = "Change Login";
    Layout = "_AuthLayout";
}

<form asp-controller="Auth" asp-action="UpdateLogin" method="post">
    <h2 class="mb-5">Change Login</h2>

    <div class="input-field">
        <input asp-for="NewLogin" type="text" required />
        <label asp-for="NewLogin">New Login:</label>
    </div>

    @if (Model.HasPassword)
    {
        <div class="input-field mb-5">
            <input asp-for="Password" type="password" required autocomplete="off" />
            <label asp-for="Password">Confirm Password:</label>
            <button type="button" id="toggle-password" title="Show password" tabindex="-1">
                <i class="fas fa-eye"></i>
            </button>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(ViewData["FirstError"]?.ToString()))
    {
        <span class="text-danger mb-4" id="error-container">@ViewData["FirstError"]</span>
    }

    <button class="mb-4" type="submit">Change</button>
</form>

<script src="~/js/auth.js"></script>