@using PCSetupHub.Data.Models.Hardware

@model SearchComponentViewModel

@{
    ViewData["Title"] = "RAM";

    string searchQueryName = $"{char.ToLower(Model.ControllerName[0]) + Model.ControllerName[1..]}SearchQuery";
}

<form class="mb-2" asp-controller="Ram" asp-action="Search" method="get">
    <div class="searchbar-container">
        <div class="search-bar">
            <div class="input-container">
                <input class="search-input"
                       placeholder="Search..."
                       type="search"
                       name="@searchQueryName"
                       value="@Model.SearchQuery" />
            </div>
        </div>
        <button type="submit" class="search-button"><i class="fa fa-search"></i></button>
    </div>
</form>

<div class="mb-2">
    @await Html.PartialAsync("PcComponents/_SearchResultsPartial", Model)
</div>

<div class="create-component-prompt mb-3">
    <span>Didn't find the right RAM? <a asp-action="Create" asp-route-pcConfigurationId="@Model.PcConfigurationId" asp-route-currentComponentId="@Model.CurrentComponentId">Add yours</a>.</span>
</div>